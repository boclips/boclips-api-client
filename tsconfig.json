{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "lib": ["es2015", "es6"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["src/**/*.test.*"],
  "include": ["src/"]
}
